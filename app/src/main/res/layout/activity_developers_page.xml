<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_design">
    <!-- SOPHIA  -->
    <!-- SOPHIA  -->
    <!-- SOPHIA  -->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- The semi-transparent layer to apply the background tint -->
        <View
            android:layout_width="match_parent"
            android:layout_height="200mm"
            android:background="#292929"

            android:alpha="0.9"/>

        <!-- Main content of the page -->
        <LinearLayout
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center">

            <!-- Header Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meet the Developers"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A passionate team dedicated to crafting seamless, innovative, and user-friendly experiences. Get to know the minds behind the magic!"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="20dp"/>

            <!-- Developer Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:backgroundTint="#89B8EE">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/aloria"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_border"
                    android:contentDescription="Aloria's Profile Picture"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sophia Bianca Aloria"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#121212"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Developer | UI/UX Designer"
                        android:textSize="14sp"
                        android:textColor="#121212"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Developer Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:backgroundTint="#89B8EE">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/aligato"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_border"
                    android:contentDescription="Teammate's Profile Picture"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zander N. Aligato"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#121212"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Developer | UI/UX Designer"
                        android:textSize="14sp"
                        android:textColor="#121212"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Team Vision -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Our Vision: Building seamless &amp; innovative apps!"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:paddingTop="16dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_home"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Home"
                app:cornerRadius="10dp"
                android:layout_margin="56dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="#89B8EE"/>
        </LinearLayout>
    </FrameLayout>
</ScrollView>