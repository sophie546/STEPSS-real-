<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:id="@+id/MeetDevelopers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:elevation="4dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meet the Developers"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/MeetDevelopers"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our Team"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A passionate team dedicated to crafting seamless, innovative, and user-friendly experiences. Get to know the minds behind the magic!"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Developer Card 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/modern_card_bg"
                    android:padding="15dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/aloria"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/circle_border"
                            android:contentDescription="Aloria's Profile Picture"
                            android:clipToOutline="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sophia Bianca Aloria"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Android Developer | UI/UX Designer"
                                android:textSize="14sp"
                                android:textColor="#B0B0B0"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Developer Card 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/modern_card_bg"
                    android:padding="15dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/circle_border"
                            android:clipToOutline="true"
                            android:contentDescription="Teammate's Profile Picture"
                            android:scaleType="centerCrop"
                            android:src="@drawable/aligato" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zander N. Aligato"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Android Developer | UI/UX Designer"
                                android:textSize="14sp"
                                android:textColor="#B0B0B0"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Team Vision Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our Vision"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸš€ Building seamless and innovative apps!"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:textStyle="italic"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/modern_nav_bg"
        android:gravity="center"
        android:layout_marginHorizontal="70dp"
        android:layout_marginBottom="8dp"
        android:translationY="-20dp"
        android:elevation="12dp"
        android:paddingHorizontal="12dp"
        android:clipToPadding="true"
        android:clipChildren="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/home_button_selector"
            android:contentDescription="Home"
            android:scaleType="centerInside"
            android:layout_marginHorizontal="8dp"
            android:padding="6dp" />

        <ImageButton
            android:id="@+id/button_start"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/add_icon"
            android:background="@drawable/add_icon"
            android:contentDescription="Add"
            android:scaleType="centerInside"
            android:elevation="8dp"
            android:layout_marginHorizontal="8dp"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/button_progress"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/progress_button_selector"
            android:contentDescription="Progress"
            android:scaleType="centerInside"
            android:layout_marginHorizontal="8dp"
            android:padding="6dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>