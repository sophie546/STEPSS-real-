<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_design">
    <!--SAMPLE COMMENT FOR GITHUB PUSH -->
    <!-- THIS VERSION HAS:
            - MERGED SCREENS
            - INTERACTIVE ICONS
            - 03 / 28 / 2025 12:28 AM
    -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- The semi-transparent layer to apply the background tint -->
        <View
            android:layout_width="match_parent"
            android:layout_height="200mm"
            android:background="#292929"

            android:alpha="0.9"/>

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/left_arrow" />

        <!-- Main content of the page -->
        <LinearLayout
            android:layout_marginTop="105dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center">


            <!-- Header Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meet the Developers"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A passionate team dedicated to crafting seamless, innovative, and user-friendly experiences. Get to know the minds behind the magic!"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="20dp"/>

            <!-- Developer Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:backgroundTint="#89B8EE">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/aloria"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_border"
                    android:contentDescription="Aloria's Profile Picture"
                    android:clipToOutline="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sophia Bianca Aloria"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:shadowColor="#80000000" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Developer | UI/UX Designer"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

            </LinearLayout>


            <!-- Developer Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:backgroundTint="#89B8EE">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_border"
                    android:clipToOutline="true"
                    android:contentDescription="Teammate's Profile Picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aligato" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zander N. Aligato"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Developer | UI/UX Designer"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>


            <!-- Team Vision -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Our Vision: Building seamless &amp; innovative apps!"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:paddingTop="16dp"
                android:gravity="center"/>

        </LinearLayout>
    </FrameLayout>
</ScrollView>